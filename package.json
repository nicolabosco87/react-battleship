    "body-parser": "^1.18.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-action-creator": "^2.3.0",
    "ts-action": "^6.0.2",
