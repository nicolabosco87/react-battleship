    "@types/react-dom": "^16.0.5",
    "awesome-typescript-loader": "^5.0.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "express": "^4.16.3",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^5.1.1",
    "mocha-webpack": "^1.1.0",
