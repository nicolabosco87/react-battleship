{
  "private": true,
  "name": "react-battleship",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" ",
    "dev:client": "webpack-dev-server --mode development",
    "dev:server": "concurrently \"tsc -w\" \"nodemon dist-server/server.js\" ",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\" ",
    "build:client": "webpack --mode production",
    "build:server": "tsc",
    "prod:serve": "forever start dist-server/server.js",
    "prod:stop": "forever stopall",
    "test": "mocha -r ts-node/register --watch-extensions ts --watch spec/**/*.spec.ts",
    "test-webpack": "mocha-webpack --webpack-config webpack.config.test.js \"spec/**/*.spec.ts\" || true"
  },
  "author": "Nicola Bosco",
  "license": "ISC",
